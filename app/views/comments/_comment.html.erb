<%= turbo_frame_tag(comment) do %> 
  <article class= "mb-2 border-b" >
  <p>
  <%= comment.content%>
  </p>
  <time>
  <%= format_date(comment.created_at) %>
  </time>
  <footer class="my-1">
  <%= link_to '編輯', edit_comment_path(comment), class: 'btn btn-xs btn-primary' %>
  <%= link_to '刪除', comment_path(comment), method: 'delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
  </footer>
  </article>
<% end %>
